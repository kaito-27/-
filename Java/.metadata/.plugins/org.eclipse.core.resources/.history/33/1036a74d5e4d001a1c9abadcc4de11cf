package quiz;

import java.time.LocalDate;
import java.time.format.TextStyle;
import java.util.Locale;

public class Java72 {
	public static void main(String[] args) {
		LocalDate date = LocalDate.of(2019,4,4);
		StringBuilder dateStr = new StringBuilder();

		dateStr.append(date.getYear());
		dateStr.append("/");
		dateStr.append(date.getMonthValue());
		dateStr.append("/");
		dateStr.append(date.getDayOfMonth());
		dateStr.append("(");
		dateStr.append(date.getDayOfWeek().getDisplayName(TextStyle.SHORT, Locale.JAPAN));
		dateStr.append(")");

		System.out.println(dateStr);
	}
}
